{
  "name": "@uploadcare/api-clients",
  "private": true,
  "type": "module",
  "version": "4.0.1",
  "license": "MIT",
  "workspaces": [
    "packages/api-client-utils",
    "packages/upload-client",
    "packages/rest-client"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "run-p eslint prettier",
    "lint:fix": "run-p eslint:fix prettier:fix",
    "eslint:fix": "eslint ./ --ext=ts,js --fix",
    "eslint": "eslint ./ --ext=ts,js",
    "prettier:fix": "prettier --write './**/*.{ts,js}'",
    "prettier": "prettier --check './**/*.{ts,js}'",
    "test": "npm run test --workspaces",
    "test:production": "npm run test:production -w packages/upload-client",
    "release:prepare": "shipjs prepare",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "27.0.0",
    "@types/node": "17.0.38",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "chalk": "4.1.0",
    "dts-bundle-generator": "6.9.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "lint-staged": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prettier-config-standard": "5.0.0",
    "rimraf": "3.0.2",
    "rollup": "^2.75.5",
    "rollup-plugin-node-externals": "^4.0.0",
    "shipjs": "0.24.0",
    "ts-jest": "28.0.3",
    "ts-node": "^10.8.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  }
}
