{
  "extends": [
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
      }
    },
    {
      "files": [
        "**/*.js"
      ],
      "parserOptions": {
        "sourceType": "module"
      },
      "env": {
        "es2021": true,
        "node": true
      }
    }
  ]
}
