{
  "compilerOptions": {
    "declaration": false,
    "target": "es6",
    "module": "es2015",
    "lib": ["es2015", "dom", "es2018.promise"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
